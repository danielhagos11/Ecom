@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Categories</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <partial name="_Notifications" />
        <div>
            <div class="row">

                <div class=" col-2">
                    <a class="btn btn-primary mb-2" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle-fill"></i>Product</a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                 
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var @product in Model)
                    {
                        <tr>
                            <td>@product.Title</td>
                            <td>@product.ISBN</td>
                            <td>@product.Price</td>
                            <td>@product.Author</td>
                         

                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash"></i>Delete
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>

    </div>
</div>











