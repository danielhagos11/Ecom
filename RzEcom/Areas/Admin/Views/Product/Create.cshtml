@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <form method="post" class="row">
            <div class="borde p-3">

                @* <div asp-validation-summary="All"></div>*@
                <div class="col-12">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" class="ms-2" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" class="ms-2" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN"></label>
                    <input asp-for="ISBN" class="form-control" class="ms-2" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control" class="ms-2" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice"></label>
                    <input asp-for="ListPrice" class="form-control" class="ms-2" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" class="ms-2" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50"></label>
                    <input asp-for="Price50" class="form-control" class="ms-2" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100"></label>
                    <input asp-for="Price100" class="form-control" class="ms-2" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-primary form-control">Create Product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary form-control border" asp-controller="Product" asp-action="Index">
                            Back To Product List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


