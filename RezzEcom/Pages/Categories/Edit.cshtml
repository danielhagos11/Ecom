@page
@model RezzEcom.Pages.Categories.EditModel

<form method="post">
    <div class="borde p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Categorry</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div>*@
        <input asp-for="Category.Id" hidden />
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" class="form-control" />
           
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit Category</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-secondary form-control border" asp-controller="Category" asp-action="Index">
                    Back To Category List
                </a>
            </div>
        </div>


    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

