@page
@model RezzEcom.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-10">
            <h2>Category List</h2>
        </div>
        <div class=" col-2">
            <a class="btn btn-primary mb-2" asp-page="/categories/create"><i class="bi bi-plus-circle-fill"></i>Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Category Name</th>

        <th>Display Orderrr</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.CategoriesList)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                        </a>
                            <a asp-page="/categories/delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>

                    </div>
                </td>
            </tr>   
        }
     
    </tbody>

</table>
</div>

